<h1><%= @movie.title %></h1>

<div class="row">
    <div class="col-6">
        <p><%= "Author: #{@movie.director}" %></p>
        <p><%= "Price: $#{sprintf("%0.02f", @movie.price)}" %></p>
        <p><%= "Release Date: #{@movie.release}" %></p>
    </div>
    <div class="col-6">
        <%= image_tag @movie.picture %>
    </div>
</div>

<%= link_to "Back", movies_path, class: "btn btn-danger"%>